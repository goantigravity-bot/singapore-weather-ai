# Terraform配置示例
# 复制此文件为 terraform.tfvars 并填写您的配置

# ========== 基础配置 ==========
aws_region   = "ap-southeast-1"  # 新加坡区域
environment  = "production"
project_name = "weather-ai"

# ========== EC2配置 ==========
instance_type      = "t3.medium"  # 或 "t3.small" 以降低成本
root_volume_size   = 20           # GB
use_elastic_ip     = true         # 使用固定IP

# SSH配置
ssh_public_key_path = "~/.ssh/id_rsa.pub"
ssh_allowed_ips     = ["0.0.0.0/0"]  # 生产环境应改为您的IP

# ========== S3和CloudFront配置 ==========
frontend_bucket_name = "your-unique-bucket-name-12345"  # 必须全局唯一
enable_cloudfront    = true  # 启用CDN加速

# ========== 域名配置（可选） ==========
# 如果您有域名，取消注释并填写
# domain_name      = "example.com"
# route53_zone_id  = "Z1234567890ABC"
